@model Post
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>The Place With the Stuff</title>
  </head>
  <body>
      <div class="container">

          <h1>Welcome, @ViewBag.user.alias</h1>
          <a style="float: right;" href="/logout">Log Out</a>

          <form asp-action="makePost" method="POST" >
              <div class="row mt-5">
                  <div class="col-10">
                      <textarea placeholder="Post something witty here..." class="form-control" asp-for="text" id="" cols="80" rows="3" style="resize: none;"></textarea>
                  </div>
                  <div class="col-2">
                      <input class="btn form-control" type="submit"value="Idea!">

                  </div>
              </div>
          </form>
          @foreach(var i in @ViewBag.allPosts){
            <div class="container">
                    <div class="row p-2">
                        <div class="col-2">
                            <label><a href="users/@i.poster.userid">@i.poster.alias says:</a></label>

                        </div>
                        <div class="col-9 border">
                            <p>@i.text</p>

                        </div>
                        @if(i.posterid == @ViewBag.user.userid){
                            <a class="mr-2" href="delete/@i.postid">Delete</a>
                        }
                        <div class="row">

                            <a class="ml-5" href="like/@i.postid/@ViewBag.user.userid">Like</a>
                            <a class="ml-3 mr-1" href="Quotes/@i.postid">@i.Likes.Count people </a> like this.
                        </div>

                    </div>
            </div>
          }


      </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>