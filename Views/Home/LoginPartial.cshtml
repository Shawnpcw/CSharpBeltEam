@model LoginUser
<h1 class="text-danger">@ViewBag.error</h1>
<form asp-action="LoginAction"  method="POST">
    <label asp-for="email2">Email:</label>
    <span asp-validation-for="email2"></span>
    <input class="form-control" type="text" asp-for="email2">
    <label asp-for="password">Password:</label>
    <span asp-validation-for="password"></span>
    <input class="form-control" type="password" asp-for="password">

    <div class="text-right">
        <button class="btn btn-primary mt-3" type="submit" >Login!</button>
    </div>
</form>